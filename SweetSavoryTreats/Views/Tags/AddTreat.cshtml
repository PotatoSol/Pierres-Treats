@{
  Layout = "_Layout";
}

@model SweetSavoryTreats.Models.Flavor

<h2>Add an item</h2>

<h4>Add an item to this flavor: @Html.DisplayFor(model => model.Title)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select item")
    @Html.DropDownList("ItemId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>